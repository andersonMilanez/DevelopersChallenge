@using challenge.Models.Data;

@model IEnumerable<Team>

@{
    ViewBag.Title = "Times Participantes";
    int countTeams = ( int )ViewBag.countTeams;
}

<h2>Times Participantes</h2>

<p>
    @if ( countTeams < 4 )
    {
        <a href="@Url.Action("Create", "Teams" )" class="btn btn-default">Novo &nbsp; <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
    }
</p>
<table class="table" >
    <tr>
        <th>
            @Html.DisplayNameFor( model => model.Name )
        </th>
        <th></th>
    </tr>

    @foreach ( var item in Model )
    {
        <tr>
            <td>
                @Html.DisplayFor( modelItem => item.Name )
            </td>
            <td>
                  <a href="@Url.Action("Edit", "Teams", new { id = item.Id } )" class="btn btn-default btn-sm">Editar &nbsp; <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                | <a href="@Url.Action("Delete", "Teams", new { id = item.Id } )" class="btn btn-default btn-sm">Excluir &nbsp; <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            </td>
        </tr>
    }

</table>
